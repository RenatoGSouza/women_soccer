{
  "compilerOptions": {
  /* Basic Options */
  "target": "es2019",
  "module": "commonjs",
  "sourceMap": true,                     
  "outDir": "./build",
  "rootDir": "./src",
  "strict": true,
  "moduleResolution": "node",
  "baseUrl": "./src", 
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}